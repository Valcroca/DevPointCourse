<h1><%= @list.name %></h1>
<% if @items.any? %>
  <ul>
    <% @items.each do |item| %>
      <li>
        <%= link_to "Item - #{item.name}", item_path(item) %>
        <%= button_to 'Edit Item', edit_item_path(item), method: :get %> 
        <%= button_to 'Delete', item_path(item), method: :delete, data: {confirm: 'Delete this item'} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <h3>No items to show</h3>
<% end %>