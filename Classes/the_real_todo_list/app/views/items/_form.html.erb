<%= form_for @item do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br />
  <%= f.label :priority %>
  <%= f.select :priority %>
  <br />
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <br />
  <%= f.submit %>
<% end %>